# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Ollama Configuration (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Cartesia TTS Configuration
CARTESIA_API_KEY=your_cartesia_api_key_here
CARTESIA_VOICE_ID=default
CARTESIA_MODEL=sonic-english

# LLM Provider Priority (comma-separated: openai, gemini, ollama)
LLM_PROVIDER_CHAIN=openai,ollama

# Audio Configuration
SAMPLE_RATE=16000
CHUNK_SIZE=1024
BUFFER_DURATION=5.0
AUDIO_DEVICE_INDEX=-1

# Wake Word Configuration
WAKE_PHRASES=Hey Expert,Okay Assistant
WAKE_WORD_SENSITIVITY=0.5
WAKE_WORD_MODEL_PATH=./models/wake_word/

# Speaker Diarization Configuration
MAX_SPEAKERS=10
SPEAKER_SIMILARITY_THRESHOLD=0.75
SPEAKER_EMBEDDING_MODEL=speechbrain/spkrec-ecapa-voxceleb

# Transcription Configuration
STT_MODEL=base.en
STT_LANGUAGE=en
STT_COMPUTE_TYPE=float32

# Expert Configuration
KNOWLEDGE_BASE_PATH=./knowledge/documents
EMBEDDINGS_PATH=./knowledge/embeddings
MAX_CONTEXT_TOKENS=4000
MAX_KNOWLEDGE_CHUNKS=5

# Meeting Configuration
MEETING_DISPLAY_NAME=AI Expert
ZOOM_SDK_KEY=
ZOOM_SDK_SECRET=

# Performance Configuration
MAX_LATENCY_MS=500
ENABLE_GPU=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/voice_assistant.log

# Output Configuration
SAVE_TRANSCRIPTS=true
TRANSCRIPT_OUTPUT_DIR=./outputs
